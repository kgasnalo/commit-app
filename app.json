{
  "expo": {
    "name": "COMMIT",
    "slug": "commit-app",
    "scheme": "commitapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kgxxx.commitapp",
      "buildNumber": "1",
      "usesAppleSignIn": true,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.kgxxx.commitapp",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.SCHEDULE_EXACT_ALARM"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-apple-authentication",
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.257018379058-ogejion6g0bt4nua9ae1n9744f1ivpuh"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow access to the photo library to verify your reading progress.",
          "cameraPermission": "Allow access to the camera to capture your reading progress."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow access to the camera to scan ISBN barcodes."
        }
      ],
      [
        "expo-notifications",
        {
          "color": "#FF4D00"
        }
      ],
      "expo-live-activity",
      "expo-audio",
      [
        "@sentry/react-native",
        {
          "organization": "commit-app",
          "project": "commit-app-mobile",
          "autoUpload": false
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "bddbc0ec-bba0-47ef-974d-9c6974ea2c8b"
      }
    },
    "locales": {
      "ja": "./locales/ja.json",
      "en": "./locales/en.json",
      "ko": "./locales/ko.json"
    }
  }
}
